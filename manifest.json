{
  "name": "No More Twitter Topics",
  "description": "Automatically tells twitter you are not interested in Twitter topics.",
  "version": "1.0.0",
  "manifest_version": 3,
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "./icons/NMTT16.png",
    "48": "./icons/NMTT48.png",
    "128": "./icons/NMTT128.png"
  },
  "action": {
    "default_popup": "options.html"
  }
}